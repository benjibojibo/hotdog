<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>3D Hotdog</title>

<style>
    body {
        margin: 0;
        background: #f3e6c9;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
        font-family: sans-serif;
    }

    /* Scene wrapper */
    .scene {
        width: 300px;
        height: 200px;
        perspective: 800px;
        cursor: grab;
    }

    .scene:active {
        cursor: grabbing;
    }

    /* Hotdog container */
    .hotdog {
        width: 200px;
        height: 80px;
        position: relative;
        transform-style: preserve-3d;
        transform: rotateX(20deg) rotateY(0deg);
        transition: transform 0.1s linear;
    }

    /* Base bun shape */
    .bun {
        position: absolute;
        width: 200px;
        height: 80px;
        background: #d7a76c;
        border-radius: 40px;
        top: 0;
        left: 0;
        transform: translateZ(0);
    }

    /* Sausage */
    .sausage {
        position: absolute;
        width: 170px;
        height: 40px;
        background: #b44732;
        border-radius: 20px;
        top: 20px;
        left: 15px;
        transform: translateZ(20px);
    }

    /* Mustard zig-zag */
    .mustard {
        position: absolute;
        width: 170px;
        height: 8px;
        background: none;
        border-radius: 4px;
        top: 36px;
        left: 15px;
        transform: translateZ(25px);
        background: repeating-linear-gradient(
            90deg,
            #f7e54a 0 10px,
            transparent 10px 20px
        );
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
        animation: wiggle 1.6s infinite linear;
    }

    @keyframes wiggle {
        0% { transform: translateZ(25px) translateY(-1px); }
        50% { transform: translateZ(25px) translateY(1px); }
        100% { transform: translateZ(25px) translateY(-1px); }
    }
</style>
</head>

<body>
    <div class="scene">
        <div class="hotdog" id="hotdog">
            <div class="bun"></div>
            <div class="sausage"></div>
            <div class="mustard"></div>
        </div>
    </div>

<script>
    const hotdog = document.getElementById("hotdog");

    let isDragging = false;
    let lastX = 0;
    let rotationY = 0;
    let rotationX = 20;

    document.querySelector(".scene").addEventListener("mousedown", (e) => {
        isDragging = true;
        lastX = e.clientX;
    });

    window.addEventListener("mouseup", () => {
        isDragging = false;
    });

    window.addEventListener("mousemove", (e) => {
        if (!isDragging) return;

        const dx = e.clientX - lastX;
        lastX = e.clientX;

        rotationY += dx * 0.5;

        hotdog.style.transform = `rotateX(${rotationX}deg) rotateY(${rotationY}deg)`;
    });
</script>

</body>
</html>
